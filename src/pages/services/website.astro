---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../layouts/Navbar.astro";
import Footer from "../../layouts/Footer.astro";

import ServicePreview from "../../layouts/ServicePreview.astro";
import Packages from "../../layouts/Packages.astro";
import Package from "../../layouts/Package.astro";
import EmptyComparison from "../../layouts/EmptyComparison.astro";

---

<Layout title="PbtSystems | Official Hosting Provider">
	<Navbar active="website"></Navbar>

	<ServicePreview
		title="Hosting de Páginas Web"
		description="Un hosting es un servicio online que hace que se pueda acceder a tu sitio web en Internet. Al comprar un hosting web, estás alquilando un espacio en un servidor que almacena todos los archivos y datos de tu sitio web para que funcione correctamente."
		image="/images/services/website.jpg">
	</ServicePreview>

	<div class="relative bg-gray-800">
		<div class="max-w-7xl mx-auto pt-24 pb-24 px-4 sm:px-6 lg:px-8">
			<div class="sm:flex sm:flex-col sm:align-center">
				<h1 class="text-5xl font-extrabold text-white sm:text-center">Nuestros Planes --></h1>
			</div>
			<div class="mt-12 space-y-4 sm:mt-16 sm:space-y-0 sm:grid sm:grid-cols-2 sm:gap-1 lg:max-w-4xl lg:mx-auto xl:max-w-none xl:mx-0 xl:grid-cols-4">
				<div class="rounded-lg shadow-sm divide-y divide-gray-200">
					<div class="p-6">
						<a href="https://pbthp.pbtservers.com" target="_blank">
							<img class="mt-3 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl" src="/images/services/Web_Nginx-Wordpress.png" alt="Web_Nginx-Wordpress">
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<Footer></Footer>
	<script is:inline src="/js/default.js"></script>
</Layout>