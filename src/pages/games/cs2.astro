---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../layouts/Navbar.astro";
import Footer from "../../layouts/Footer.astro";

import ServicePreview from "../../layouts/ServicePreview.astro";
import Packages from "../../layouts/Packages.astro";
import Package from "../../layouts/Package.astro";
import Comparison from "../../layouts/Comparison.astro";
---

<Layout title="PbtSystems | Official Hosting Provider">
	<Navbar></Navbar>

	<ServicePreview
		title="Hosting de CS2"
		description="Counter-Strike 2 es un juego acción multijugador en primera persona free-to-play desarrollado por Valve para PC, posiblemente sea el shooter competitivo más jugado de la historia."
		image="/images/services/cs2.jpg">
	</ServicePreview>
	
	<div class="relative bg-gray-800">
		<div class="max-w-7xl mx-auto pt-24 pb-24 px-4 sm:px-6 lg:px-8">
			<div class="sm:flex sm:flex-col sm:align-center">
				<h1 class="text-5xl font-extrabold text-white sm:text-center">Actualmente no hay planes...</h1>
			</div>
			<div class="mt-12 space-y-4 sm:mt-16 sm:space-y-0 sm:grid sm:grid-cols-2 sm:gap-1 lg:max-w-4xl lg:mx-auto xl:max-w-none xl:mx-0 xl:grid-cols-4">
				<div class="rounded-lg shadow-sm divide-y divide-gray-200">
					<div class="p-6">
						<a href="https://pbthp.pbtservers.com" target="_blank">
							<img class="mt-3 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl" src="/images/services/CS2_Vanilla.png" alt="CS2_Vanilla">
						</a>
					</div>
				</div>
				<div class="rounded-lg shadow-sm divide-y divide-gray-200">
					<div class="p-6">
						<a href="https://pbthp.pbtservers.com" target="_blank">
							<img class="mt-3 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl" src="/images/services/CS2_Estable.png" alt="CS2_Estable">
						</a>
					</div>
				</div>
				<div class="rounded-lg shadow-sm divide-y divide-gray-200">
					<div class="p-6">
						<a href="https://pbthp.pbtservers.com" target="_blank">
							<img class="mt-3 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl" src="/images/services/CS2_Extendido.png" alt="CS2_Extendido">
						</a>
					</div>
				</div>
				<div class="rounded-lg shadow-sm divide-y divide-gray-200">
					<div class="p-6">
						<a href="https://pbthp.pbtservers.com" target="_blank">
							<img class="mt-3 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl" src="/images/services/CS2_Adicional.png" alt="CS2_Adicional">
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<Footer></Footer>
	<script is:inline src="/js/default.js"></script>
</Layout>